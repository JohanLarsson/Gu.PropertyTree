<Window x:Class="Gu.PropertyTree.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.PropertyTree.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:propertyTree="clr-namespace:Gu.PropertyTree;assembly=Gu.PropertyTree"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance demo:MainWindowViewModel}"
        mc:Ignorable="d">
    <Grid>
        <TreeView BorderThickness="0" ItemsSource="{Binding NodeObjectList}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type propertyTree:RootNode}" ItemsSource="{Binding Path=Nodes}">
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <StackPanel Margin="-10,0,0,0" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=Value}" />
                            </StackPanel>
                        </TreeViewItem.Header>
                    </TreeViewItem>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>

    </Grid>
</Window>
