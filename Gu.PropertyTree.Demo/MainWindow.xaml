<Window x:Class="Gu.PropertyTree.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.PropertyTree.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tree="clr-namespace:Gu.PropertyTree;assembly=Gu.PropertyTree"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance demo:MainWindowViewModel}"
        mc:Ignorable="d"
        >
    <Grid>
        <TreeView BorderThickness="0"
                  ItemsSource="{Binding Root}"
                  >
            <TreeView.Resources>
                <Style TargetType="{x:Type TextBox}">
                    <!--<Setter Property="BorderThickness" Value="0" />-->
                    <Setter Property="BorderBrush" Value="{x:Null}" />
                    <Setter Property="MinWidth" Value="50" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Style.Triggers>
                        <!--<MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource AncestorType={x:Type TreeViewItem}}}" Value="True" />
                                <Condition Binding="{Binding IsReadOnly, RelativeSource={RelativeSource Self}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="BorderThickness" Value="1" />
                        </MultiDataTrigger>-->
                        <DataTrigger Binding="{Binding IsKeyboardFocusWithin,
                                                       RelativeSource={RelativeSource AncestorType={x:Type TreeViewItem}}}"
                                     Value="True"
                                     >
                            <!--<Setter Property="BorderBrush" Value="Black" />-->
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>

                <HierarchicalDataTemplate DataType="{x:Type tree:RootNode}"
                                          ItemsSource="{Binding Nodes}"
                                          >
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <StackPanel Margin="-10,0,0,0"
                                        Orientation="Horizontal"
                                        >
                                <TextBlock Text="{Binding Path=Value}" />
                            </StackPanel>
                        </TreeViewItem.Header>
                    </TreeViewItem>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate DataType="{x:Type tree:EditableNode}"
                                          ItemsSource="{Binding Nodes}"
                                          >
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0">
                                    <Run Text="{Binding ParentProperty.Name, Mode=OneWay}" />
                                    <Run Text=":" />
                                </TextBlock>
                                <TextBox Grid.Column="1"
                                         Text="{Binding Value}"
                                         />
                            </Grid>
                        </TreeViewItem.Header>
                    </TreeViewItem>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate DataType="{x:Type tree:ReadOnlyNode}"
                                          ItemsSource="{Binding Nodes}"
                                          >
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <StackPanel Margin="-10,0,0,0"
                                        Orientation="Horizontal"
                                        >
                                <TextBlock Text="{Binding ParentProperty.Name}" />
                                <TextBox IsReadOnly="True"
                                         Text="{Binding Value,
                                                        Mode=OneWay}"
                                         />
                            </StackPanel>
                        </TreeViewItem.Header>
                    </TreeViewItem>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
